<?xml version="1.0" encoding="utf-8"?>
<extension version="3.5" type="plugin" group="content" method="upgrade">
    <name>PLG_CONTENT_OSHIDER</name>
    <author>Alledia</author>
    <creationDate>October 14, 2016</creationDate>
    <copyright>Copyright (C) 2016 Alledia.com</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>support@alledia.com</authorEmail>
    <authorUrl>http://www.alledia.com</authorUrl>
    <version>1.0.1</version>
    <description>PLG_CONTENT_OSHIDER_DESCRIPTION</description>

    <alledia>
        <element publish="false" ordering="last">oshider</element>
        <namespace>OSHider</namespace>
        <license>free</license>
        <relatedExtensions>
            <extension
                type="library"
                element="allediaframework">AllediaFramework</extension>

            <extension
                type="plugin"
                group="system"
                element="ossystem"
                publish="false"
                ordering="first">OSSystem</extension>
        </relatedExtensions>
    </alledia>

    <scriptfile>script.installer.php</scriptfile>

    <files>
        <folder>assets</folder>
        <folder>language</folder>
        <folder>library</folder>
        <folder>views</folder>
        <filename plugin="oshider">oshider.php</filename>
        <filename>include.php</filename>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="legacy"
                    label="PLG_CONTENT_OSHIDER_CONFIG_LEGACY_LABEL"
                    description="PLG_CONTENT_OSHIDER_CONFIG_LEGACY_DESC"
                    type="radio"
                    class="btn-group btn-group-yesno"
                    default="1">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
        </fields>
    </config>

    <updateservers>
        <server type="extension" priority="1" name="OSHider">
            <![CDATA[https://deploy.ostraining.com/client/update/free/stable/plg_content_oshider/extension.xml]]></server>
    </updateservers>
</extension>
